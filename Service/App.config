<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>
		<bindings>
            <netTcpBinding>
                  <binding name="tcpStreamingBinding"
                           transferMode="Streamed" 
                           maxReceivedMessageSize="67108864"
                           sendTimeout="00:10:00"
                           receiveTimeout="00:10:00"
                           openTimeout="00:01:00"
                           closeTimeout="00:01:00">
                  </binding>
            </netTcpBinding>
        </bindings>
		<services>
			<service name="Service.SessionService">
				<endpoint address="SessionService"
						  binding="netTcpBinding"
						  bindingConfiguration="tcpStreamingBinding"
						  contract="Library.ISessionService"></endpoint>
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4002"/>
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>
</configuration>